# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Chrome Remote Debugging URL
# Start Chrome with: google-chrome-stable --no-sandbox --disable-gpu --remote-debugging-port=9222 --remote-debugging-address=0.0.0.0 --user-data-dir=/tmp/chrome-dev-sessionon
CHROME_WS_ENDPOINT=ws://localhost:9222/devtools/browser/YOUR_ID_HERE

# Or use HTTP endpoint to auto-discover
CHROME_ENDPOINT=http://localhost:9222

# Server Port
PORT=3000

# Bot Settings
MIN_RELEVANCE_SCORE=0.7
COMMENT_DELAY_SECONDS=10
VIDEO_DELAY_MIN=3
VIDEO_DELAY_MAX=8
MAX_COMMENTS_PER_HOUR=30